<div class="tags">
  <div class="header">
    <h1>Tags</h1>
    <%= link_to 'New Tag', new_tag_path %>
  </div>

  <table>
    <tr>
      <th>Tag</th>
      <th>Options</th>
    </tr>

  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.description %></td>
      <td><%= link_to 'Edit', edit_tag_path(tag) %> | <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
</div>