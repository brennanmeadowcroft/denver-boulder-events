BEGIN:VCALENDAR
CALSCALE:GREGORIAN
METHOD:PUBLISH
X-WR-CALNAME:Denver/Boulder Events & Festivals
X-WR-TIMEZONE:America/Denver
X-WR-CALDESC:
BEGIN:VTIMEZONE
TZID:America/Denver
X-LIC-LOCATION:America/Denver
BEGIN:DAYLIGHT
TZOFFSETFROM:-0700
TZOFFSETTO:-0600
TZNAME:MDT
DTSTART:19700308T020000
RRULE:FREQ=YEARLY;BYMONTH=3;BYDAY=2SU
END:DAYLIGHT
BEGIN:STANDARD
TZOFFSETFROM:-0600
TZOFFSETTO:-0700
TZNAME:MST
DTSTART:19701101T020000
RRULE:FREQ=YEARLY;BYMONTH=11;BYDAY=1SU
END:STANDARD
END:VTIMEZONE
<% @events.each do |event| %>
BEGIN:VEVENT
DTSTART;VALUE=DATE:<%= event.start_date.strftime("%Y%m%d") %>
DTEND;VALUE=DATE:<%= event.end_date.strftime("%Y%m%d") %>
DTSTAMP:<%= event.start_date.strftime("%Y%m%dT%H%M%SZ") %>
CREATED:<%= event.created_at.strftime("%Y%m%dT%H%M%SZ") %>
DESCRIPTION:<%= event.notes %>
LAST-MODIFIED:<%= event.updated_at.strftime("%Y%m%dT%H%M%SZ") %>
LOCATION:<%= event.location %>
SEQUENCE:0
STATUS:CONFIRMED
SUMMARY:<%= event.event_name %>
TRANSP:TRANSPARENT
END:VEVENT
<% end %>
END:VCALENDAR