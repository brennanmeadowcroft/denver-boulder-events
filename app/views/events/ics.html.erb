BEGIN:VCALENDAR <br />
CALSCALE:GREGORIAN<br />
METHOD:PUBLISH<br />
X-WR-CALNAME:Denver/Boulder Events & Festivals<br />
X-WR-TIMEZONE:America/Denver<br />
X-WR-CALDESC:<br />
BEGIN:VTIMEZONE<br />
TZID:America/Denver<br />
X-LIC-LOCATION:America/Denver<br />
BEGIN:DAYLIGHT<br />
TZOFFSETFROM:-0700<br />
TZOFFSETTO:-0600<br />
TZNAME:MDT<br />
DTSTART:19700308T020000<br />
RRULE:FREQ=YEARLY;BYMONTH=3;BYDAY=2SU<br />
END:DAYLIGHT<br />
BEGIN:STANDARD<br />
TZOFFSETFROM:-0600<br />
TZOFFSETTO:-0700<br />
TZNAME:MST<br />
DTSTART:19701101T020000<br />
RRULE:FREQ=YEARLY;BYMONTH=11;BYDAY=1SU<br />
END:STANDARD<br />
END:VTIMEZONE<br />

<% @events.each do |event| %>
	BEGIN:VEVENT<br />
	DTSTART;VALUE=DATE:<%= event.start_date.to_s(:short_ical) %><br />
	DTEND;VALUE=DATE:<%= event.end_date.to_s(:short_ical) %><br />
	DTSTAMP:<%= event.start_date.to_s(:long_ical) %><br />
	CREATED:<%= event.created_at.to_s(:long_ical) %><br />
	DESCRIPTION:<%= event.notes %><br />
	LAST-MODIFIED:<%= event.updated_at.to_s(:long_ical) %><br />
	LOCATION:<%= event.location %><br />
	SEQUENCE:0<br />
	STATUS:CONFIRMED<br />
	SUMMARY:<%= event.event_name %><br />
	TRANSP:TRANSPARENT<br />
	END:VEVENT<br />
<% end %>
END:VCALENDAR