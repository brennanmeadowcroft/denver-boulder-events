@import "all/foundation_and_overrides";
@import "all/overrides";

body {
	background: url(<%= image_path("denver-summer-skyline.jpg") %>) no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	font-family: $dbe-body-font;
}


h1, h2, h3, h4 {
	font-family: $dbe-heading-font;
}

a {
	text-decoration: underline;
	color: $dbe-link-color;

	&:hover {
		color: $dbe-primary-accent;
	}
}

h1 {
	color: $dbe-primary-accent;
	font-size: 2.5em;
}

.alert-success, .alert-fail {
	@include alert-base();
	@include alert-style($dbe-accent-success);
}

.top-bar {
	margin-bottom: 0;
	background: $nav-bar-color;

	a {
		text-decoration: none;
	}
}

.signup_callout {
	@include grid-row();
	min-height: 575px;
	margin-top: 80px;
	text-align: center;

	h1 {
		margin: 0;
		padding: 0;
		color: $dbe-primary-accent;
	}
	.copy {
		padding: 20px;
		background: $callout-color;
		color: $dbe-light-text;
		border-radius: 10px;
	}

	.subscribe {
		margin-top: 75px;
		p {
			text-align: center;
		}

		.response {
			margin-bottom: 10px;
			text-align: center;
			color: $dbe-light-text;
			font-style: italic;
		}
	}

	.signup {
		@include button($radius:5px, $bg:$dbe-accent-success);
	}

	.service_alert {
		@include alert();
		@include alert-style($dbe-accent-fail);
	}
}

.content {
	background: $dbe-primary;
	color: $dbe-light-text;

	section {
		padding-top: 5%;
		padding-bottom: 5%;
		min-height: 600px;
		color: $dbe-dark-text;

		ul {
			margin-left: 40px;
		}

		li {
			margin-bottom: 10px;
		}

	}

	.alt_color {
		background: $dbe-secondary;
		color: $dbe-light-text;
	}

	.copy {
		@include grid-row();
		padding-top: 20px;
	}

	.image_links {
		ul {
			list-style: none;
		}

		li {
			margin-right: 4%;
			display: inline;
		}

		img {
			width: 15%;
			border: 1px solid #000000;
		}
	}
}

.footer {
	margin: 0;
	padding: 5px;
	border: none;
	background: $dbe-primary;
	color: $dbe-dark-text;

	ul {
		margin: 0;
		li {
			margin-right: 20px;
			display: inline;
		}
	}
}

.question_modal {
	@include reveal-modal-base($width:40%);

	padding: 0;

	h3 {
		padding: 10px;
		background: $dbe-secondary;
		color: $dbe-light-text;
	}

	p {
		padding: 0 10px 10px 10px;
		color: $dbe-dark-text;
	}
}

form {
	@include grid-column(8, $center:true);

	label {
		color: #FFFFFF;
	}
}